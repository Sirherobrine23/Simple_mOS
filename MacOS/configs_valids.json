{
    "cpu": {
        "Penryn": {
            "opencore": {
                "main": "Penryn/OpenCore.qcow2"
            },
            "ram": 3072,
            "cpu_name": "Penryn",
            "core": 2,
            "threads": 4
        },
        "Skylake": {
            "opencore": {
                "main": "Skylake/OpenCore.qcow2"
            },
            "ram": 3072,
            "cpu_name": "Skylake-Client",
            "core": 2,
            "threads": 4
        },
        "Broadwell": {
            "opencore": {
                "main": "Broadwell/OpenCore.qcow2"
            },
            "ram": 3072,
            "cpu_name": "Broadwell",
            "core": 2,
            "threads": 4
        },
        "Haswell": {
            "opencore": {
                "main": "Haswell/OpenCore.qcow2"
            },
            "ram": 3072,
            "cpu_name": "Haswell",
            "core": 2,
            "threads": 4
        }
    },
    "video": {
        "vnc": {
            "command": "-vnc 0.0.0.0:${{PORT}}",
            "options": {
                "port": {
                    "type": "int",
                    "default": 0
                }
            }
        },
        "vga": {
            "command": "-device VGA,vgamem_mb=${{MEM}}",
            "options": {
                "MEM": {
                    "type": "int",
                    "default": 128
                }
            }
        }
    },
    "GPU": {
        "nvidia": {},
        "amd": {},
        "intel": {}
    },
    "network": {
        "netdev": {
            "argv": "-netdev user,id=net0 -device vmxnet3,netdev=net0,id=net0,mac=${{mac}}",
            "options": {
                "mac": {
                    "type": "str",
                    "default": "52:54:00:c9:18:27"
                }
            }
        }
    },
    "harddisk": {
        "qcow2": {
            "type": "virtual",
            "command": "-drive id=${{ID}},if=none,file=\"${{PATH}}\",format=qcow2 -device ide-hd,bus=sata.${{SATA_ID}},drive=${{ID}}",
            "options": {
                "ID": {
                    "type": "str",
                    "default": "MacHDD"
                },
                "SATA_ID": {
                    "type": "int",
                    "default": 4
                },
                "PATH": {
                    "type": "str",
                    "default": "./MacOS_HDD.qcow2"
                }
            }
        },
        "raw": {
            "type": "virtual",
            "command": "-drive id=${{ID}},if=none,file=\"${{PATH}}\",format=raw -device ide-hd,bus=sata.${{SATA_ID}},drive=${{ID}}",
            "options": {
                "ID": {
                    "type": "str",
                    "default": "MacHDD"
                },
                "SATA_ID": {
                    "type": "int",
                    "default": 5
                },
                "PATH": {
                    "type": "str",
                    "default": "./MacOS_HDD.raw"
                }
            }
        },
        "device": {
            "type": "hadware",
            "command": "-drive id=${{ID}},if=none,file=\"${{PATH}}\",format=raw -device ide-hd,bus=sata.${{SATA_ID}},drive=${{ID}}",
            "options": {
                "ID": {
                    "type": "str",
                    "default": "MacHDD"
                },
                "SATA_ID": {
                    "type": "int",
                    "default": 6
                },
                "PATH": {
                    "type": "str",
                    "default": "/dev/sdX"
                }
            }
        }
    }
}